{
  "manifest_version": 3,
  "name": "Croc AI",
  "version": "0.0.0",
  "description": "Browser assistant using Chrome's built-in AI",
  "permissions": [
    "activeTab",
    "scripting",
    "sidePanel",
    "bookmarks",
    "downloads",
    "contextMenus",
    "storage",
    "tabs",
    "clipboardWrite",
    "sessions",
    "history",
    "readingList",
    "fontSettings",
    "alarms",
    "notifications",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "side_panel": {
    "default_path": "index.html",
    "default_width": 400
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "/icons/croc16.png",
    "32": "/icons/croc32.png",
    "48": "/icons/croc48.png",
    "64": "/icons/croc64.png",
    "128": "/icons/croc128.png"
  },
  "action": {
    "default_title": "Open Croc AI",
    "default_icon": {
      "16": "/icons/croc16.png",
      "32": "/icons/croc32.png",
      "48": "/icons/croc48.png",
      "128": "/icons/croc128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "minimum_chrome_version": "129"
}