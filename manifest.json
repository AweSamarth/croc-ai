{
  "manifest_version": 3,
  "name": "Croc AI",
  "version": "0.0.0",
  "description": "Browser assistant using Chrome's built-in AI",
  "permissions": [
    "activeTab",
    "scripting",
    "sidePanel",
    "bookmarks",
    "contextMenus"
  ],
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },

  
  "action": {
    "default_title": "Open Croc AI"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.medium.com/*",
        "https://medium.com/*",
        "https://*.nytimes.com/*",
        "https://*.theguardian.com/*",
        "https://*.hindustantimes.com/*",
        "https://*.indiatimes.com/*",
        "https://*.timesofindia.indiatimes.com/*" 
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "minimum_chrome_version": "129"
}