{
  "manifest_version": 3,
  "name": "Croc AI",
  "version": "0.0.0",
  "description": "Browser assistant using Chrome's built-in AI",
  "permissions": [
    "activeTab",
    "scripting",
    "sidePanel",
    "bookmarks",
    "downloads",
    "contextMenus",
    "storage",
    "tabs",
    "clipboardWrite",
    "sessions",
    "history",
    "readingList"
  ],

  "host_permissions": [
    "<all_urls>"
  ],
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },

  
  "action": {
    "default_title": "Open Croc AI"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],

      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "minimum_chrome_version": "129"
}